<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="@dimen/space_xl"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fleet Safety"
        android:textColor="@color/color_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/image_velocity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/image_velocity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_xl"
        android:layout_marginBottom="@dimen/space_l"
        android:adjustViewBounds="true"
        android:contentDescription="@string/illustration_velocity"
        android:scaleType="fitCenter"
        android:src="@drawable/velocity"
        app:layout_constraintBottom_toTopOf="@id/button_go_driver"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGreeting"
        app:layout_constraintWidth_max="128dp"
        app:layout_constraintWidth_min="96dp"
        app:layout_constraintWidth_percent="0.3"
        app:tint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_go_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Driver Dashboard"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="@dimen/space_m"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/button_go_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_velocity" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_go_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin Settings"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="@dimen/space_m"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/button_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_go_driver" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="28dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_go_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>
